<div class="create-container">
    <h1>Create Room</h1>
    <form action="/create-room" method="post">
        <div class="form-group">
            <label for="roomName">Room Name</label>
            <input type="text" id="roomName" name="roomName" value="Test Room Name">
        </div>

        <div class="form-group">
            <label for="roomPassword">Room Password</label>
            <div class="input-group">
                <button type="button" class="toggle-btn">DISABLED</button>
                <input type="text" id="roomPassword" name="roomPassword" value="T02KX" disabled>
            </div>
        </div>

        <div class="form-group">
            <label for="roomCode">Room Code</label>
            <div class="input-with-button">
                <input type="text" id="roomCode" name="roomCode" value="T02KX" readonly>
                <button type="button" class="copy-btn">COPY</button>
            </div>
        </div>

        <button type="submit" class="create-btn">Create</button>
    </form>
</div>